<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
	
	<style name="MainActivityTheme" parent="AppTheme.NoActionBar">
    </style>
	
	<style name="AppTheme.Light" parent="AppTheme.NoActionBar">
		<item name="android:windowBackground">@color/backgroundLight</item>
	</style>
	
	<style name="AppTheme.Light.ActionBar" parent="AppTheme">
		<item name="android:windowBackground">@color/backgroundLight</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/backgroundDark</item>
		<item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
	</style>
	
	<style name="AppTheme.Dark.ActionBar" parent="Theme.AppCompat">
		<item name="android:windowBackground">@color/backgroundDark</item>
		<item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
	</style>
	
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
	
	<style name="StartTheme" parent="AppTheme.NoActionBar">
		<item name="colorPrimaryDark">@color/colorSecondary</item>
		<item name="android:windowBackground">@color/colorSecondaryLight</item>
	</style>

    <style name="ChatInfoTheme" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="DialogFullscreen" parent="android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
